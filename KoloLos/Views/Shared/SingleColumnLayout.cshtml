@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="layout-wrapper">
    <div id="layout-main-container">
        <div id="layout-main" class="group">
            <div id="layout-content" class="group shadow-box">
                <header id="layout-header" class="group">
                    <div id="header">
                        <div id="logo">
                            <div class="zone zone-header">
                                <div id="branding">
                                    <a href="../">
                                        <img src="/Content/pics/logow.png" border="0" />
                                    </a>
                                </div>
                            </div>
                            @Html.Partial("MenuPartial")
                        </div>
                    </div>
                </header>
                <div id="content" class="group">
                    <div class="zone zone-content">
                        <article class="content-item">
                            <header>
                                <div class="ribbon-wrapper">
                                    <div class="ribbon-front">
                                        <!-- ribbon text goes here -->
                                        <div id="articleTitle">@RenderSection("articleTitle")</div>
                                    </div>
                                    <div class="ribbon-edge-topleft"></div>
                                    <div class="ribbon-edge-topright"></div>
                                    <div class="ribbon-edge-bottomleft">
                                    </div>
                                    <div class="ribbon-edge-bottomright">
                                    </div>
                                    <div class="ribbon-back-left"></div>
                                    <div class="ribbon-back-right"></div>
                                </div>
                            </header>
                            @RenderBody()
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
