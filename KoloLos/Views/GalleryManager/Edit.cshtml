@model KoloLos.Models.GalleryManager.GalleryEdit

@{
    ViewBag.Title = "title";
    Layout = "../Shared/ManagerLayout.cshtml";
}

<h2>@Model.Title</h2>
<div>
    <table>
        <tr>
            <th>@Html.DisplayNameFor(g => g.FileNames)</th>
            <th></th>
        </tr>
        @foreach (string fileName in Model.FileNames)
        {
            <tr>
                <td>@Html.ActionLink(fileName, "ImageDetails", new { Model.Id, fileName })</td>
                <td>@Html.ActionLink("Skasuj", "DeleteImage", new { Model.Id, fileName })</td>
            </tr>
        }
    </table>
</div>
<div>
    <br />
    <div>
        @Html.ActionLink("Dodaj nowe zdjęcia", "AddImage", new { id = Model.Id })
    </div>
    <div>
        @Html.ActionLink("Powrót do list galerii", "Index")
    </div>
</div>
