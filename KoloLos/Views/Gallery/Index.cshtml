@using KoloLos.Models.Gallery
@model Galleries

@{
    ViewBag.Title = "title";
    Layout = "../Shared/PaginableListLayout.cshtml";
}

@section articleTitle
{
Galeria
}

<ul class="content-items">
    @for (int i = 0; i < Model.Gallery.Length; i++)
    {

        string itemClass = i == 0 ? "first" : string.Empty;
        GalleryLink gallery = Model.Gallery[i];
                                    
        <li class="@itemClass">
            <article class="content-item">
                <h1>
                    @Html.ActionLink(gallery.Title, "Details", new { gallery.Id })
                </h1>
            </article>
        </li>
    }
</ul>

