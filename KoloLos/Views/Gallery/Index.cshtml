@using KoloLos.Models.Gallery
@model Galleries

@{
    ViewBag.Title = "title";
    Layout = "../Shared/SingleColumnLayout.cshtml";
}

@section articleTitle
{
Galeria
}

<ul class="content-items">
    @for (int i = 0; i < Model.Gallery.Length; i++)
    {

        string itemClass = i == 0 ? "first" : string.Empty;
        GalleryLink gallery = Model.Gallery[i];
                                    
        <li class="@itemClass">
            <article class="content-item">
                <h1>
                    @Html.ActionLink(gallery.Title, "Details", new { gallery.Id })
                </h1>
            </article>
        </li>
    }
</ul>

<ul class="pager group">
    @if (Model.PreviousPageExists)
    {
        <li>
            @Html.ActionLink("Poprzednie", "Index", new { pageIndex = Model.PreviousPageIndex }, null)
        </li>
    }
    @if (Model.NextPageExists)
    {
        <li>
            @Html.ActionLink("Następne", "Index", new { pageIndex = Model.NextPageIndex }, null)
        </li>
    }
</ul>

