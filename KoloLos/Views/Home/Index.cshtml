@model KoloLos.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@Model.DescriptionTitle</h1>
            </hgroup>
            <p>
                @Model.Description
            </p>
        </div>
    </section>
}
<h3>We suggest the following:</h3>
<ul class="round">
    @foreach (var articleAbstract in Model.Abstracts)
    {
        <li class="one">
            <h5>@articleAbstract.Title</h5>
            @articleAbstract.Content
        </li>
    }
</ul>
