@model KoloLos.Models.ArticleAbstractsList

@{
    Layout = "~/Views/Shared/SingleColumnLayout.cshtml";
    ViewBag.Title = "title";
}

@section articleTitle
{
Aktualności
}

<ul class="blog-posts content-items">
    @for (int i = 0; i < Model.ArticleAbstracts.Length; i++)
    {

        string itemClass = i == 0 ? "first" : string.Empty;
        KoloLos.Models.ArticleAbstract articleAbstract = Model.ArticleAbstracts[i];
                                    
        <li class="@itemClass">
            <article class="content-item blog-post">
                <header>
                    <h1>
                        @Html.RouteLink(articleAbstract.Title, new { id = articleAbstract.Id })
                    </h1>
                    <div class="metadata">
                        <div class="published">
                            @articleAbstract.PublishDate
                        </div>
                    </div>
                </header>
                <p>
                    @Html.RemoveMarkup(articleAbstract.Abstract)
                    @Html.RouteLink("więcej", new { id = articleAbstract.Id })
                </p>
            </article>
        </li>
    }
</ul>

<ul class="pager group">
    @if (Model.PreviousPageExists)
    {
        <li>
            @Html.ActionLink("Poprzednie", "Index", new { pageIndex = Model.PreviousPageIndex }, null)
        </li>
    }
    @if (Model.NextPageExists)
    {
        <li>
            @Html.ActionLink("Następne", "Index", new { pageIndex = Model.NextPageIndex }, null)
        </li>
    }
</ul>

